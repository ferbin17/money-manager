<!DOCTYPE html>
<html>
  <head>
    <title>MoneyManager</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <!-- Navigation Bar -->
    <nav class="bg-white shadow-sm border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <!-- Logo and Brand -->
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-gradient-to-r from-blue-600 to-green-600 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                </svg>
              </div>
            </div>
            <div class="ml-3">
              <h1 class="text-xl font-bold text-gray-900">Money Manager</h1>
            </div>
          </div>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center space-x-8">
            <%= link_to "Dashboard", root_path, class: "text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200" %>
            <%= link_to "Funds", funds_path, class: "text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200" %>
            <%= link_to "Asset Houses", asset_houses_path, class: "text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200" %>
            <%= link_to "Transactions", "#", class: "text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200" %>
            <%= link_to "Reports", "#", class: "text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200" %>
            <%= link_to "Budget", "#", class: "text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200" %>
            <%= link_to "Settings", "#", class: "text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200" %>
          </div>

          <!-- Currency Selector - Right Side -->
          <div class="hidden md:flex items-center">
            <div class="relative" data-controller="currency">
              <button type="button" class="inline-flex items-center text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200" 
                      id="currency-menu-button" 
                      data-currency-target="button"
                      data-action="click->currency#toggle"
                      aria-expanded="false" 
                      aria-haspopup="true">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                </svg>
                <span data-currency-target="display">₹ INR</span>
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              
              <!-- Currency Dropdown Menu -->
              <div class="hidden absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" 
                   role="menu" 
                   aria-orientation="vertical" 
                   aria-labelledby="currency-menu-button" 
                   data-currency-target="menu">
                <div class="py-1" role="none">
                  <button class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" 
                          role="menuitem" 
                          data-action="click->currency#select"
                          data-symbol="₹" 
                          data-code="INR">
                    <span class="font-medium">₹</span> Indian Rupee (INR)
                  </button>
                  <button class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" 
                          role="menuitem" 
                          data-action="click->currency#select"
                          data-symbol="$" 
                          data-code="USD">
                    <span class="font-medium">$</span> US Dollar (USD)
                  </button>
                  <button class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" 
                          role="menuitem" 
                          data-action="click->currency#select"
                          data-symbol="€" 
                          data-code="EUR">
                    <span class="font-medium">€</span> Euro (EUR)
                  </button>
                  <button class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" 
                          role="menuitem" 
                          data-action="click->currency#select"
                          data-symbol="£" 
                          data-code="GBP">
                    <span class="font-medium">£</span> British Pound (GBP)
                  </button>
                  <button class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900" 
                          role="menuitem" 
                          data-action="click->currency#select"
                          data-symbol="¥" 
                          data-code="JPY">
                    <span class="font-medium">¥</span> Japanese Yen (JPY)
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- Mobile menu button -->
          <div class="md:hidden flex items-center">
            <button type="button" class="bg-white p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500" aria-controls="mobile-menu" aria-expanded="false" onclick="toggleMobileMenu()">
              <span class="sr-only">Open main menu</span>
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Mobile Navigation Menu -->
      <div class="md:hidden hidden" id="mobile-menu">
        <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t border-gray-200">
          <%= link_to "Dashboard", root_path, class: "text-gray-700 hover:text-blue-600 block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200" %>
          <%= link_to "Funds", funds_path, class: "text-gray-700 hover:text-blue-600 block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200" %>
          <%= link_to "Asset Houses", asset_houses_path, class: "text-gray-700 hover:text-blue-600 block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200" %>
          
          <!-- Mobile Currency Selector -->
          <div class="px-3 py-2" data-controller="currency">
            <label class="block text-sm font-medium text-gray-700 mb-2">Currency</label>
            <select class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                    data-currency-target="mobileSelect"
                    data-action="change->currency#selectMobile">
              <option value="₹ INR">₹ Indian Rupee (INR)</option>
              <option value="$ USD">$ US Dollar (USD)</option>
              <option value="€ EUR">€ Euro (EUR)</option>
              <option value="£ GBP">£ British Pound (GBP)</option>
              <option value="¥ JPY">¥ Japanese Yen (JPY)</option>
            </select>
          </div>
          
          <%= link_to "Transactions", "#", class: "text-gray-700 hover:text-blue-600 block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200" %>
          <%= link_to "Reports", "#", class: "text-gray-700 hover:text-blue-600 block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200" %>
          <%= link_to "Budget", "#", class: "text-gray-700 hover:text-blue-600 block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200" %>
          <%= link_to "Settings", "#", class: "text-gray-700 hover:text-blue-600 block px-3 py-2 rounded-md text-base font-medium transition-colors duration-200" %>
        </div>
      </div>
    </nav>

    <%= yield %>

    <script>
      function toggleMobileMenu() {
        const mobileMenu = document.getElementById('mobile-menu');
        const button = document.querySelector('[aria-controls="mobile-menu"]');
        
        if (mobileMenu.classList.contains('hidden')) {
          mobileMenu.classList.remove('hidden');
          button.setAttribute('aria-expanded', 'true');
        } else {
          mobileMenu.classList.add('hidden');
          button.setAttribute('aria-expanded', 'false');
        }
      }
    </script>
  </body>
</html>
