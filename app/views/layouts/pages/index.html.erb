<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-green-50" data-controller="<%= "#{item_type}s" %>">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-2xl sm:text-3xl font-bold text-gray-900"><%= t("pages.index.#{item_type}s.header_title") %></h1>
          <p class="mt-2 text-sm sm:text-base text-gray-600"><%= t("pages.index.#{item_type}s.header_subtitle") %></p>
        </div>
        <div class="mt-4 sm:mt-0">
          <%= link_to send("new_#{item_type}_path"), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            <%= t("pages.index.#{item_type}s.add_new") %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Item Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 sm:gap-6">
      <% items.each do |item| %>
        <div class="bg-white overflow-hidden shadow-sm border border-gray-200 rounded-xl hover:shadow-md transition-shadow duration-200">
          <div class="p-4 sm:p-6">

            <!-- Item Details -->
            <%= render partial: "item_detail", locals: { item: item } %>

            <!-- Actions -->
            <div class="mt-6 flex space-x-2">
              <%= link_to send("#{item_type}_path", item), class: "flex-1 bg-gray-50 hover:bg-gray-100 text-gray-700 px-3 py-2 rounded-lg text-sm font-medium text-center transition-colors duration-200" do %>
                <%= t("pages.view_details") %>
              <% end %>
              <%= link_to send("edit_#{item_type}_path", item), class: "flex-1 bg-blue-50 hover:bg-blue-100 text-blue-700 px-3 py-2 rounded-lg text-sm font-medium text-center transition-colors duration-200" do %>
                <%= t("pages.edit_text") %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Empty State -->
    <% if items.empty? %>
      <div class="text-center py-12">
        <div class="mx-auto w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2"><%= t("pages.index.#{item_type}s.empty_subtitle") %></h3>
        <p class="text-sm text-gray-500 mb-6"><%= t("pages.index.#{item_type}s.empty_subtitle") %></p>
        <%= link_to send("new_#{item_type}_path"), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          <%= t("pages.index.#{item_type}s.add_your_first") %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
