<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-green-50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center mb-4">
        <%= link_to send("#{item_type}_path", item), class: "inline-flex items-center text-sm text-gray-500 hover:text-gray-700 transition-colors duration-200 mr-4" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          <%= t("pages.edit.#{item_type}s.back_to_item") %>
        <% end %>
      </div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900"><%= t("pages.edit.#{item_type}s.edit_item") %></h1>
      <p class="mt-2 text-sm sm:text-base text-gray-600"><%= t("pages.edit.#{item_type}s.update_item_for", name: item.try(:name)) %></p>
    </div>

    <!-- Form -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900"><%= t("pages.edit.#{item_type}s.item_detail") %></h2>
      </div>
      <div class="p-6">
        <%= render 'form', item: @item %>
      </div>
    </div>
  </div>
</div>
