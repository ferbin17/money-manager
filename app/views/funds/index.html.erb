<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-green-50" data-controller="funds">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Funds</h1>
          <p class="mt-2 text-sm sm:text-base text-gray-600">Manage your investment funds and track their performance</p>
        </div>
        <div class="mt-4 sm:mt-0">
          <%= link_to new_fund_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Add New Fund
          <% end %>
        </div>
      </div>
    </div>

    <!-- Funds Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 sm:gap-6">
      <% @funds.each do |fund| %>
        <div class="bg-white overflow-hidden shadow-sm border border-gray-200 rounded-xl hover:shadow-md transition-shadow duration-200">
          <div class="p-4 sm:p-6">
            <!-- Fund Header -->
            <div class="flex items-start justify-between mb-4">
              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-semibold text-gray-900 truncate"><%= fund.name %></h3>
                <p class="text-sm text-gray-500"><%= fund.fund_type.humanize %></p>
              </div>
              <div class="ml-3 flex-shrink-0">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= fund.subtype.humanize %>
                </span>
              </div>
            </div>

            <!-- Fund Details -->
            <div class="space-y-3">
              <div class="flex justify-between text-sm">
                <span class="text-gray-500">Total Investment:</span>
                <span class="font-medium text-gray-900" data-currency-format="<%= fund.total_investment %>">₹<%= number_with_precision(fund.total_investment, precision: 2) %></span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-500">Current NAV:</span>
                <span class="font-medium text-gray-900" data-currency-format="<%= fund.current_nav %>">₹<%= number_with_precision(fund.current_nav, precision: 2) %></span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-500">Current Value:</span>
                <span class="font-medium text-gray-900" data-currency-format="<%= fund.current_value %>">₹<%= number_with_precision(fund.current_value, precision: 2) %></span>
              </div>
            </div>

            <!-- Actions -->
            <div class="mt-6 flex space-x-2">
              <%= link_to fund_path(fund), class: "flex-1 bg-gray-50 hover:bg-gray-100 text-gray-700 px-3 py-2 rounded-lg text-sm font-medium text-center transition-colors duration-200" do %>
                View Details
              <% end %>
              <%= link_to edit_fund_path(fund), class: "flex-1 bg-blue-50 hover:bg-blue-100 text-blue-700 px-3 py-2 rounded-lg text-sm font-medium text-center transition-colors duration-200" do %>
                Edit
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Empty State -->
    <% if @funds.empty? %>
      <div class="text-center py-12">
        <div class="mx-auto w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No funds yet</h3>
        <p class="text-sm text-gray-500 mb-6">Get started by adding your first investment fund.</p>
        <%= link_to new_fund_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Add Your First Fund
        <% end %>
      </div>
    <% end %>
  </div>
</div>
