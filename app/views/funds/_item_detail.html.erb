<!-- Fund Header -->
<div class="flex items-start justify-between mb-4">
    <div class="flex-1 min-w-0">
        <h3 class="text-lg font-semibold text-gray-900 truncate"><%= item.name %></h3>
        <p class="text-sm text-gray-500"><%= item.fund_type.humanize %></p>
    </div>
    <div class="ml-3 flex-shrink-0">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            <%= item.subtype.humanize %>
        </span>
    </div>
</div>

<!-- Fund Details -->
<div class="space-y-3">
    <div class="flex justify-between text-sm">
        <span class="text-gray-500">Total Investment:</span>
        <span class="font-medium text-gray-900" data-currency-format="<%= item.total_investment %>">₹<%= number_with_precision(item.total_investment, precision: 2) %></span>
    </div>
    <div class="flex justify-between text-sm">
        <span class="text-gray-500">Current NAV:</span>
        <span class="font-medium text-gray-900" data-currency-format="<%= item.current_nav %>">₹<%= number_with_precision(item.current_nav, precision: 2) %></span>
    </div>
    <div class="flex justify-between text-sm">
        <span class="text-gray-500">Current Value:</span>
        <span class="font-medium text-gray-900" data-currency-format="<%= item.current_value %>">₹<%= number_with_precision(item.current_value, precision: 2) %></span>
    </div>
</div>