<% asset_house = item %>

<%= form_with(model: asset_house, local: true, class: "space-y-6") do |form| %>
  <% if asset_house.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(asset_house.errors.count, "error") %> prohibited this asset house from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% asset_house.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Basic Information -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Basic Information</h3>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div class="sm:col-span-2">
        <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200", placeholder: "Enter asset house name" %>
        <p class="mt-1 text-xs text-gray-500">The name of the asset management company or fund house</p>
      </div>

      <div class="sm:col-span-2">
        <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :description, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200", placeholder: "Enter description (optional)" %>
        <p class="mt-1 text-xs text-gray-500">Brief description of the asset house and its services</p>
      </div>
    </div>
  </div>

  <!-- Contact Information -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Contact Information</h3>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div>
        <%= form.label :website, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.url_field :website, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200", placeholder: "https://example.com" %>
        <p class="mt-1 text-xs text-gray-500">Official website URL</p>
      </div>

      <div>
        <%= form.label :contact_email, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.email_field :contact_email, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200", placeholder: "contact@example.com" %>
        <p class="mt-1 text-xs text-gray-500">Primary contact email address</p>
      </div>

      <div>
        <%= form.label :contact_phone, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.telephone_field :contact_phone, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors duration-200", placeholder: "+91 98765 43210" %>
        <p class="mt-1 text-xs text-gray-500">Primary contact phone number</p>
      </div>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex flex-col sm:flex-row justify-end space-y-3 sm:space-y-0 sm:space-x-4">
    <%= link_to asset_houses_path, class: "inline-flex justify-center items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
      Cancel
    <% end %>
    
    <%= form.submit class: "inline-flex justify-center items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
      <%= asset_house.persisted? ? 'Update Asset House' : 'Create Asset House' %>
    <% end %>
  </div>
<% end %>
