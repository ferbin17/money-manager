
<!-- Contact Information -->
<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
  <h2 class="text-lg font-semibold text-gray-900 mb-4">Contact Information</h2>
  <div class="space-y-4">
    <% if item.website.present? %>
      <div class="flex items-center py-3 border-b border-gray-100">
        <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
        </svg>
        <div class="flex-1">
          <span class="text-sm text-gray-500">Website</span>
          <div class="mt-1">
            <a href="<%= item.website %>" target="_blank" class="text-blue-600 hover:text-blue-800 font-medium">
              <%= item.website %>
            </a>
          </div>
        </div>
      </div>
    <% end %>
    
    <% if item.contact_email.present? %>
      <div class="flex items-center py-3 border-b border-gray-100">
        <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <div class="flex-1">
          <span class="text-sm text-gray-500">Email</span>
          <div class="mt-1">
            <a href="mailto:<%= item.contact_email %>" class="text-blue-600 hover:text-blue-800 font-medium">
              <%= item.contact_email %>
            </a>
          </div>
        </div>
      </div>
    <% end %>

    <% if item.contact_phone.present? %>
      <div class="flex items-center py-3 border-b border-gray-100">
        <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        <div class="flex-1">
          <span class="text-sm text-gray-500">Phone</span>
          <div class="mt-1">
            <a href="tel:<%= item.contact_phone %>" class="text-blue-600 hover:text-blue-800 font-medium">
              <%= item.contact_phone %>
            </a>
          </div>
        </div>
      </div>
    <% end %>

    <div class="flex items-center py-3">
      <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
      </svg>
      <div class="flex-1">
        <span class="text-sm text-gray-500">Total Funds</span>
        <div class="mt-1">
          <span class="text-lg font-semibold text-gray-900"><%= item.funds.size %></span>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Statistics -->
<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
  <h2 class="text-lg font-semibold text-gray-900 mb-4">Fund Statistics</h2>
  <div class="space-y-4">
    <div class="flex justify-between items-center py-3 border-b border-gray-100">
      <span class="text-gray-600">Total Investment</span>
      <span class="text-lg font-semibold text-gray-900">₹<%= number_with_precision(item.funds.sum(&:total_investment), precision: 2) %></span>
    </div>
    <div class="flex justify-between items-center py-3 border-b border-gray-100">
      <span class="text-gray-600">Current Value</span>
      <span class="text-lg font-semibold text-gray-900">₹<%= number_with_precision(item.funds.sum(&:current_value), precision: 2) %></span>
    </div>
    <div class="flex justify-between items-center py-3">
      <span class="text-gray-600">Created</span>
      <span class="font-medium text-gray-900"><%= item.created_at.strftime("%B %d, %Y") %></span>
    </div>
  </div>
</div>
